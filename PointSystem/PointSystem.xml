<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project PointSystem">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/.."/>
    <property name="dir.jarfile" value="/home/nokorot/Desktop"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/PointSystem 2.9.1.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="no.nokorot.pointsystem.PointSystem"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.buildfile}/bin"/>
            <fileset dir="${dir.workspace}/Serialization/bin"/>
            <fileset dir="${dir.workspace}/NokoBox/bin"/>
        </jar>
    </target>
</project>
